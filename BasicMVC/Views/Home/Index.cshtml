@model BasicMVC.Models.ViewModel.CustomerOrderViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Müşteri ve Sipariş Bilgileri</title>
</head>
<body>
    <h1>Müşteri Bilgileri</h1>
    <ul>
        <li><strong>ID:</strong> @Model.Customer.Id</li>
        <li><strong>Ad:</strong> @Model.Customer.FirstName</li>
        <li><strong>Soyad:</strong> @Model.Customer.LastName</li>
        <li><strong>E-posta:</strong> @Model.Customer.Email</li>
    </ul>

    <h2>Siparişler</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Sipariş ID</th>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Miktar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.ProductName</td>
                    <td>@order.Price</td>
                    <td>@order.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
